<tr>
    <td><%= link_to course.name, [:supervisor, course] %></td>
    <td><%= course.description.truncate 50 %></td>
    <td><%= course.start_date %></td>
    <td><%= course.end_date %></td>
    <td><%= course.users.supervisors.count %></td>
    <td><%= course.users.trainees.count %></td>
    <td align="right">
      <%= link_to t(:edit), edit_supervisor_course_path(course),
        class: "btn btn-primary" %>
      <%= link_to t(:delete), [:supervisor, course], method: :delete,
        class: "btn btn-danger", data: { confirm: t(:confirm_message) } %>
    </td>
</tr>
