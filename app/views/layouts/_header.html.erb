<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "FRAMGIA TRAINING SYSTEM", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Trainee <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if is_supervisor? %>
                <li><%= link_to "Add new", signup_path %></li>
              <% end %>
              <li>
                <%= link_to "Show all", users_path(role: "trainee") %>
              </li>
            </ul>
          </li>
          <% if is_supervisor? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Supervisor <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "Show all", users_path(role: "supervisor") %>
                </li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
